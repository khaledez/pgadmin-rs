# pgAdmin-rs Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env with real passwords!

# ============================================================================
# Server Configuration
# ============================================================================

# Server host and port
# Format: HOST:PORT
# Default: 0.0.0.0:3000
SERVER_ADDRESS=0.0.0.0:3000

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================

# PostgreSQL connection parameters
# These are required for the application to start

# Database host (use 'postgres' when running in Docker Compose)
POSTGRES_HOST=localhost

# Database port
POSTGRES_PORT=5432

# Database username
POSTGRES_USER=postgres

# Database password
# IMPORTANT: Change this to a strong password in production!
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=postgres

# Database name
POSTGRES_DB=testdb

# ============================================================================
# Logging Configuration
# ============================================================================

# Rust logging level
# Format: module=level[,module=level,...]
# Levels: trace, debug, info, warn, error
# 
# Examples:
#   Development: pgadmin_rs=debug,axum=info,sqlx=warn
#   Production:  pgadmin_rs=info,axum=warn
#
RUST_LOG=pgadmin_rs=debug,axum=info,sqlx=warn

# ============================================================================
# Docker Compose Variables (optional)
# ============================================================================

# These variables can be used in docker-compose.yml
# They're useful for quickly switching between configurations

# Example: Override default compose values
# COMPOSE_PROJECT_NAME=pgadmin-rs
# COMPOSE_FILE=docker-compose.yml

# ============================================================================
# Connection Pool Configuration (optional)
# ============================================================================

# Maximum database connections
# Default: 20
# MAX_DB_CONNECTIONS=20

# Minimum database connections
# Default: 2
# MIN_DB_CONNECTIONS=2

# Connection acquisition timeout (seconds)
# Default: 5
# DB_ACQUIRE_TIMEOUT=5

# Connection idle timeout (seconds)
# Default: 300 (5 minutes)
# DB_IDLE_TIMEOUT=300

# Connection maximum lifetime (seconds)
# Default: 1800 (30 minutes)
# DB_MAX_LIFETIME=1800

# ============================================================================
# Development Tips
# ============================================================================

# For local development with Docker Compose:
# 1. Copy this file to .env
# 2. Update POSTGRES_PASSWORD to a development password
# 3. Run: docker-compose up
# 4. Access app at http://localhost:3000

# For production deployment:
# 1. Set all POSTGRES_* variables securely
# 2. Use strong passwords (min 32 characters)
# 3. Use docker-compose.prod.yml for additional security settings
# 4. Set RUST_LOG to 'warn' or 'error' to reduce logs
